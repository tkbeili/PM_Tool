<div id="<%= dom_id(comment) %>">
  <div class="well well-sm">
    <blockquote>
      <p><%= comment.body %></p>
      <p>Created By: <%= comment.user_first_name %></p>
      <p><%= link_to "Edit", edit_discussion_comment_path(@discussion, comment), class: "btn btn-xs btn-primary" %> <%= link_to "Delete", discussion_comment_path(@discussion, comment), method: :delete, data: {confirm: "Are you use you want to delete this comment?"}, class: "btn btn-xs btn-danger", remote: true %></p>
    </blockquote>
  </div>
</div>