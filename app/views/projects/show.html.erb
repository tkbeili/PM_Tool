<h2>Project Control</h2>

<div class="panel panel-default">
  <div class="panel-heading">
      <h3><%= @project.title %></h3>
  </div>
      <p class="project-buttons"><%= link_to "EDIT", edit_project_path(@project), class: "btn btn-info btn-xs" %> <%= link_to "DELETE", project_path(@project), method: :delete, data: {confirm: "Are you use you want to delete this project?"}, class: "btn btn-danger btn-xs" %></p>  
  <div class="panel-body">
    <p><span class="glyphicon glyphicon-user"></span> Created By: <%= @project.user_first_name %> | <span class="glyphicon glyphicon-calendar"></span> Due Date: <%= delivery_date(@project.due_date) %></p>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h4>Project Details: </h4>
        <p><%= @project.description %></p>
      </div>
    </div>
    <% if @project.members.any? %>
      <div>
        <h4>Project Members:</h4>
        <% @project.members.each do |member| %>
          <li class="pm-list"> <span class="glyphicon glyphicon-user"> </span> <%= User.find(member.user_id).full_name %></li>
        <% end %>
      </div>
    <% end %>
    <p> <!-- Favourite Button -->
    <% unless @project.user == current_user %>
      <% if user_signed_in? && current_user.has_favourited?(@project) %>
        <% favourite = current_user.favourites.find_by_project_id(@project.id) %>
        <%= link_to " ", project_favourite_path(@project, favourite), class: "glyphicon glyphicon-heart-empty btn btn-danger btn-sm", method: :delete%>
      <% else %>
        <%= link_to " ", project_favourites_path(@project), class: "glyphicon glyphicon-heart btn btn-danger", method: :post%>
      <% end %>
    <% end %>
    </p>
  </div>
</div>
<br>





<div class="discussion-task">
  <!-- Discussion -->
  <div class="discussions-box">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3>Add a Discussion</h3>
      </div>
      <div class="panel-body">
        <div class="discussion-form">
          <%= render "discussions/form" %>
        </div>
        <%# if @project.discussions.any? %>
        <div class="panel panel-default pan-mar">
          <div class="panel-heading">
          <h3>Discussions</h3>
          </div>
          <div class="panel-body">
            <div class="discussions">
              <% @project.discussions.each do |discussion| %>
                <%= render partial: "/discussions/discussion", locals: {discussion: discussion} %>
              <% end %>
            </div>
          </div>
        </div>
        <%# end %>
      </div>
    </div>
  </div>

  <div class="tasks-box">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3>Add a Task</h3>
      </div>
      <div class="panel-body">
        <div class='task-form'>
          <%= render "tasks/form" %>
        </div>
        <div class="not-done-box">
          <div class="panel panel-danger">
            <div class="panel-heading">
              <!-- Tasks Not Done -->
              <%# if @project.tasks.any? %>
              <h3>Tasks To Do</h3>
            </div>
            <div class="panel-body">
              <div class="incomplete">
                <% @project.tasks.each do |task| %>
                  <%= render partial: "/tasks/incomplete", locals: {task: task} %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <%# end %>
        <!-- Tasks Done -->
        <div class="done-box">
          <div class="panel panel-success">
            <div class="panel-heading">
              <%# if @project.tasks.any? %>
              <h3>Completed Tasks</h3>
            </div>
            <div class="panel-body">
              <div class="complete">
                <% @project.tasks.each do |task| %>
                  <%= render partial: "/tasks/complete", locals: {task: task} %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <%# end %>
      </div>  
    </div>
  </div>
</div>


