<% if @discussion.errors.any? %>
  $(".discussion-form").html("<%= j render "/discussions/form" %>");
<% else %>
  $(".discussions").prepend("<%= j render partial: '/discussions/discussion', locals: {discussion: @discussion} %>");
  <% @discussion = Discussion.new %>
  $(".discussion-form").html("<%= j render "/discussions/form" %>");
<% end %>