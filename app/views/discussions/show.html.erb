<div class="panel panel-primary">
  <div class="panel-heading">
    <h4 class="panel-title"><%= @discussion.title %></h4>
  </div>
  <div class="panel-body">
    <p><%= @discussion.description %></p>
    <p>Created By: <%= @discussion.user_first_name %></p>
    <!-- Same as above -->
    <!-- <p><%#= link_to "EDIT", [:edit, @project, @discussion] %></p> -->
    <p><%= link_to "EDIT", edit_project_discussion_path(@project, @discussion), class: "btn btn-xs btn-primary" %> <%= link_to "DELETE", project_discussion_path(@project, @discussion), method: :delete, data: {confirm: "Are you use you want to delete this Discussion?"}, class: "btn btn-xs btn-danger" %></p>
  </div>
</div>


<div class="panel panel-info">
  <div class="panel-heading">
      <!-- <h3 class="panel-title">Panel title</h3> -->
    <div class='comment-form'>
      <%= render "comments/form" %>
    </div>
  </div>
  <div class="panel-body">
    <div class="show-comments">
      <% @discussion.comments.each do |comment| %>
        <%= render partial: "/comments/comment", locals: {comment: comment} %>
      <% end %>
    </div>
   </div>
</div>



