<div class="panel panel-info">
  <div class="panel-heading">
    <h4 class="panel-title"><%= @discussion.title %></h4>
  </div>
  <div class="panel-body">
    <p><%= @discussion.description %></p>
    <p>Created By: <%= @discussion.user_first_name %></p>
    <p><%= link_to "EDIT", edit_project_discussion_path(@project, @discussion) %></p>
    <!-- Same as above -->
    <!-- <p><%#= link_to "EDIT", [:edit, @project, @discussion] %></p> -->
    <p><%= link_to "DELETE", project_discussion_path(@project, @discussion), method: :delete, data: {confirm: "Are you use you want to delete this Discussion?"} %></p>
  </div>
</div>

<%= form_for([@discussion, (@comment || Comment.new)]) do |f| %>
  <div class="form-group">
    <h4>Add a Comment</h4>
    <%= f.text_field :body, class: "form-control" %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

<% @discussion.comments.each do |comment| %>
  <div class="well well-sm">
    <blockquote>
      <p><%= comment.body %></p>
      <p>Created By: <%= comment.user_first_name %></p>
      <p><%= link_to "edit", edit_discussion_comment_path(@discussion, comment)  %></p>
      <p><%= link_to "Delete", discussion_comment_path(@discussion, comment), method: :delete, data: {confirm: "Are you use you want to delete this comment?"} %></p>
    </blockquote>
  </div>
<% end  %>
